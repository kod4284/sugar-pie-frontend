{
  "extends": ["react-app", "airbnb-typescript"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".ts", ".tsx", ".css", ".scss"]
      }
    }
  },
  
  "parserOptions": {
    "project": "./tsconfig.json"
    
  },
  "rules": {
    "arrow-parens": "off",
    "linebreak-style": 0,
    "max-len": ["error", 80, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": false,
      "ignoreTemplateLiterals": false
    }],
    "react/jsx-props-no-spreading": "off"
  }
}
